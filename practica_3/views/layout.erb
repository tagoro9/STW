<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%= @title || 'Toopaste!' %></title>
  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-combined.min.css" rel="stylesheet">
  <style type="text/css">
  	.container {
  		margin: 20px;
  	}
  	textarea {
  		resize: none;
  		height: 200px;
  		width: 90%;
  	}
  	pre {
  		background: #FFF;
  	}
  	.hero-unit h1 {
  		margin-bottom: 30px;
  	}
  	/* Syntax highlighting */
	.syntax_ruby .normal {}
	.syntax_ruby .comment { color: #005; font-style: italic; }
	.syntax_ruby .keyword { color: #A00; font-weight: bold; }
	.syntax_ruby .method { color: #077; }
	.syntax_ruby .class { color: #074; }
	.syntax_ruby .module { color: #050; }
	.syntax_ruby .punct { color: #447; font-weight: bold; }
	.syntax_ruby .symbol { color: #099; }
	.syntax_ruby .string { color: #944; background: #FFE; }
	.syntax_ruby .char { color: #F07; }
	.syntax_ruby .ident { color: #004; }
	.syntax_ruby .constant { color: #07F; }
	.syntax_ruby .regex { color: #B66; background: #FEF; }
	.syntax_ruby .number { color: #F99; }
	.syntax_ruby .attribute { color: #7BB; }
	.syntax_ruby .global { color: #7FB; }
	.syntax_ruby .expr { color: #227; }
	.syntax_ruby .escape { color: #277; }

	.syntax_xml .normal {}
	.syntax_xml .namespace { color: #B66; font-weight: bold; }
	.syntax_xml .tag { color: #F88; }
	.syntax_xml .comment { color: #005; font-style: italic; }
	.syntax_xml .punct { color: #447; font-weight: bold; }
	.syntax_xml .string { color: #944; }
	.syntax_xml .number { color: #F99; }
	.syntax_xml .attribute { color: #BB7; }

	.syntax_yaml .normal {}
	.syntax_yaml .document { font-weight: bold; color: #07F; }
	.syntax_yaml .type { font-weight: bold; color: #05C; }
	.syntax_yaml .key { color: #F88; }
	.syntax_yaml .comment { color: #005; font-style: italic; }
	.syntax_yaml .punct { color: #447; font-weight: bold; }
	.syntax_yaml .string { color: #944; }
	.syntax_yaml .number { color: #F99; }
	.syntax_yaml .time { color: #F99; }
	.syntax_yaml .date { color: #F99; }
	.syntax_yaml .ref { color: #944; }
	.syntax_yaml .anchor { color: #944; }
  </style>
</head>
<body>
	<div class="container">
		<div class="hero-unit">
			<h1>Syntax highlighting - Syntaxi</h1>
		  	<%= yield %>
		</div>
	</div>
</body>
</html>