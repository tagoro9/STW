!!!
%html
  %head
    %title URL Shortener
    %link(rel="stylesheet" type="text/css" href="bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="style.css")
  %body
    #layout
      %h1 URL Shortener
      %form(action="/" method="POST")
        %label(for="url") Shorten url: 
        %input(type="text" name="url" id="url" accesskey="s")
        %br
        %label(for="custom") Custom Shortened URL(optional)
        %input(type="text" name="custom" id="custom" accesskey="t")
        %input(type="submit" value="Shorten" class="btn btn-primary")
      %form(action="/searchid" method="POST")
        %label(for="id") Search by id: 
        %input(type="text" name="id" id="id")
        %input(type="submit" value="Search" class="btn")
      %form(action="/searchurl" method="POST")
        %label(for="url") Search by URL: 
        %input(type="text" name="url" id="url")
        %input(type="submit" value="Search" class="btn")
      %form(action="/list" method="GET")
        %input(type="submit" value="List all" class="btn")
      %form(action="/visits" method="GET")
        %input(type="submit" value="Stats" class="btn")
    #content
      =yield
